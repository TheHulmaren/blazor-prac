@page "/superheroes"
@inject ISuperHeroService SuperHeroService

<h3>SuperHeroes</h3>

<table>
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Hero Name</th>
        <th>Comic</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var hero in SuperHeroService.Heroes)
    {
        <tr>
            <td>@hero.FirstName</td>
            <td>@hero.LastName</td>
            <td>@hero.HeroName</td>
            <td>@(hero.Comic?.Name ?? "Comic Not Set")</td>
        </tr>
    }
    </tbody>
</table>

@code {

    protected override async Task OnInitializedAsync()
    {
        await SuperHeroService.GetSuperHeroes();
    }

}